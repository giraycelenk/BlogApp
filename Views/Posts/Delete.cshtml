@model PostDeleteViewModel
<div class="row">
    <div class="col-12">
        <div class="bg-white p-4">
            <h1>Post Delete</h1>
            <h3 class="text-danger">Bu postu silmek istediğinizden emin misiniz ?</h3>
            <form action="Delete" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="PostId">
                <div class="mb-3">
                    <label asp-for="Title" class="form-label"></label>
                    <label asp-for="Title"class="form-control">@Model.Title</label>
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Description" class="form-label"></label>
                    <label asp-for="Description" class="form-control">@Model.Description</label>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Url" class="form-label"></label>
                    <label asp-for="Url" class="form-control">@Model.Url</label>
                    <span asp-validation-for="Url" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Content" class="form-label"></label>
                    <label asp-for="Content" class="form-control">@Model.Content</label>
                    <span asp-validation-for="Content" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-danger">Kalıcı Olarak Sil</button>
            </form>
        </div>
    </div>
</div>

